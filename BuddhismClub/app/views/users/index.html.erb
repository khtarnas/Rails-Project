<h1>Users</h1>

<table>
    <thead>
      <tr>
        <th>Email:</th>
        <th>Admin:</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users = User.all %>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td><%= user.admin %></td>
          <td><%= link_to 'Show', user %></td>
          <td><%= link_to 'Home', user_home_path(user.id) %></td>
          <% if user == current_user %>
            <td><%= link_to 'Edit Your Account', edit_user_registration_path %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>

</table>
